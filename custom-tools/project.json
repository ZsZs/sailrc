{
  "name": "custom-tools",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "custom-tools/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/custom-tools",
        "main": "custom-tools/src/index.ts",
        "tsConfig": "custom-tools/tsconfig.lib.json",
        "assets": [
          "custom-tools/*.md",
          {
            "input": "./custom-tools/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./custom-tools/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./custom-tools",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./custom-tools",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["custom-tools/**/*.ts", "custom-tools/package.json", "custom-tools/generators.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "custom-tools/jest.config.ts",
        "passWithNoTests": false
      }
    }
  },
  "tags": []
}
