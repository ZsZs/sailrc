{
  "name": "shared-base",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/base/src",
  "prefix": "sailrc",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "libs/shared/base/tsconfig.lib.json",
        "project": "libs/shared/base/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/base/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/shared/base/src/**/*.ts",
          "libs/shared/base/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/libs/shared/base"
      ],
      "options": {
        "jestConfig": "libs/shared/base/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [
    "type:util",
    "scope:shared"
  ]
}
